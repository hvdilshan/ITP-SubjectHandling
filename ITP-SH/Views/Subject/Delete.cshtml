@model ITP_SH.Models.SubjectDetailsViewModel

@{
    ViewBag.Title = "Delete";
}

<h1 style="text-align:center">Delete Subject Details</h1>
<hr style="margin-top:3%" />

<h3>Are you sure you want to delete this?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="horizontal" style="margin-left:35%">
        <div class="form-group">
            <label class="control-label col-md-auto">Subject Code</label>
            <div class="col-sm-5">
                <div class="form-control" id="form_disabl">
                    @Html.ValueFor(model => model.Subject.SubjectCode)
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-auto">Subject Name</label>
            <div class="col-sm-5">
                <div class="form-control" id="form_disabl">
                    @Html.ValueFor(model => model.Subject.SubjectName)
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-auto">Teacher</label>
            <div class="col-sm-5">
                <div class="form-control" id="form_disabl">
                    @Html.ValueFor(model => model.Subject.Teacher)
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-auto">Grade</label>
            <div class="col-sm-5">
                <div class="form-control" id="form_disabl">
                    @Html.ValueFor(model => model.Subject.Grade)
                </div>
            </div>
        </div>

        <div class="form-group" style="margin-top:3%">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" name="Delete" />
                <a type="button" value="Cancel" class="btn btn-secondary" href="/Subject/SubjectList">Cancel</a>
            </div>
        </div>
    </div>
}
<div class="form-actions no-color">
    @Html.ActionLink("Back to List", "SubjectList")
</div>
